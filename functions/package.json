{
  "name": "nwhacks2019",
  "version": "0.1.0",
  "description": "The backend (cloud functions) for nwHacks 2019",
  "author": "nwHacks2019",
  "license": "MIT",
  "scripts": {
    "pre": "firebase login",
    "lint": "eslint .",
    "serve": "firebase serve --only functions",
    "shell": "firebase functions:shell",
    "start": "yarn pre && firebase use development && yarn run shell",
    "deploy": "firebase deploy --only functions",
    "deploy:prod": "yarn pre && firebase use production && yarn deploy",
    "deploy:dev": "yarn pre && firebase use development && yarn deploy",
    "logs": "firebase functions:log"
  },
  "dependencies": {
    "firebase-admin": "5.12.1",
    "firebase-functions": "1.0.3",
    "firebase-tools": "3.19.3",
    "nyc": "12.0.2"
  },
  "devDependencies": {
    "coveralls": "3.0.1",
    "eslint": "5.0.1",
    "eslint-plugin-promise": "3.6.0",
    "jest": "23.3.0"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom" : [
        "src/**/*.js",
        "!**/node_modules/**",
        "!**/*.test.js",
        "!**/coverage/**"
    ],
    "coverageReporters": ["text", "json"]
  }
}
